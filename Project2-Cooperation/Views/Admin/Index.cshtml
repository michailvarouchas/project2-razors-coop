@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
    Layout = "_AdminLayout";
}

@if (Model.Count() != 0)
{
    <table class="table table-bordered mt-4">
        <tr>
            <th>Title</th>
            <th>Member</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Status</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>

                <td>@product.Title</td>
                <td>@product.Member.Email</td>
                <td>@product.Stock</td>
                <td>@product.SalePrice.ToString("C")</td>
                <td>@(product.IsLive ? "Live" : "Pending")</td>
                <td>@product.Category</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@product.ProductId"><i class="fa fa-edit pl-3"></i></a>
                    <a asp-action="DeleteProduct" asp-route-id="@product.ProductId" class="confirm-delete-product"><i class="fa fa-trash pl-3"></i></a>
                </td>
            </tr>
        }
    </table>

}
else
{
    <h4>There are no products available at the moment</h4>

}


<div id="confirmDialog" title="Delete Product">
    <p>Are you sure you want to delete this product? </p>
</div>

@section Scripts
{ 
    <script>
        //PRODUCT DELETE CONFIRMATION
        $(function () {
            $('.confirm-delete-product').click(function (e) {
                e.preventDefault();
                var href = $(this).attr('href');
                console.log(href);
                $('#confirmDialog').data('href', href).dialog('open');
            });

            $('#confirmDialog').dialog({
                autoOpen: false,
                modal: true,
                resizable: false,
                buttons: {
                    "Delete": function () {
                        var href = $(this).data("href");
                        window.location.href = href;
                    },
                    "Cancel": function (e) {
                        $(this).dialog('close');
                    }
                },
            });
        });
    </script>
}