@model CheckOutViewModel
@{
    ViewData["Title"] = "Check Out";
}
<div class="jumbotron jumbotron-fluid pt-2 pb-2 mt-2 mb-0 bg-white skip-static-nav">
    <div class="container">
        <h1 class="display-4 text-center">Check Out</h1>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-5 log-in">
        <form asp-action="CheckOut" method="post">
            <input type="hidden" asp-for="Order.UserDetails.ApplicationUserId" />
            <div class="form-group">
                <label asp-for="Order.UserDetails.FirstName"></label>
                <input type="text" class="form-control form-control-sm" asp-for="Order.UserDetails.FirstName" />
                <span class="text-danger" asp-validation-for="Order.UserDetails.FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.UserDetails.LastName"></label>
                <input type="text" class="form-control form-control-sm" asp-for="Order.UserDetails.LastName" />
                <span class="text-danger" asp-validation-for="Order.UserDetails.LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.UserDetails.Phone"></label>
                <input type="text" class="form-control form-control-sm" asp-for="Order.UserDetails.Phone" />
                <span class="text-danger" asp-validation-for="Order.UserDetails.Phone"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.UserDetails.City"></label>
                <input type="text" class="form-control form-control-sm" asp-for="Order.UserDetails.City" />
                <span class="text-danger" asp-validation-for="Order.UserDetails.City"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.UserDetails.Address"></label>
                <input type="text" class="form-control form-control-sm" asp-for="Order.UserDetails.Address" />
                <span class="text-danger" asp-validation-for="Order.UserDetails.Address"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.UserDetails.Zip"></label>
                <input type="text" class="form-control form-control-sm" asp-for="Order.UserDetails.Zip" />
                <span class="text-danger" asp-validation-for="Order.UserDetails.Zip"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-5 float-right">Complete Order</button>
            <a class="btn btn-secondary mt-5 mr-2 float-right" asp-controller="Cart" asp-action="Index">Back</a>
            <div class="clearfix"></div>
        </form>
    </div>
    <div class="col-md-7">
        @if (Model.Cart.CartItems.Count != 0)
        {
            <table class="table table-bordered">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotals</th>
                </tr>
                @foreach (var item in Model.Cart.CartItems)
                {
                    <tr>
                        <td>@item.Product.Title</td>
                        <td>@item.Quantity</td>
                        <td>@item.Product.SalePrice.ToString("C")</td>
                        <td>@item.Subtotals.ToString("C")</td>
                    </tr>
                }
                <tr>
                    <td colspan="3">Totals:</td>
                    <td>@Model.Cart.CalculateCartTotalCost.ToString("C")</td>
                </tr>
            </table>
        }
        else
        {
            <h4>Your Cart is Empty</h4>

        }
    </div>
</div>
