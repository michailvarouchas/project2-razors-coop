    <!-- Display messages -->
    <div class="container">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-4 skip-static-nav" role="alert">
                @TempData["message"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["failMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-4 skip-static-nav" role="alert">
                @TempData["failMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>

    <!-- Render body -->
    @if (ViewBag.Page == "home")
    {
        @RenderBody()
    }
    else
    {
        <div class="container">
            @RenderBody()
        </div>
    }

    <hr />
    <footer>
        <section id="contact">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto text-center">
