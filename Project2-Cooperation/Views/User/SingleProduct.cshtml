@model CartItem
@{
    ViewData["Title"] = "Product";
}
<div class="row skip-static-nav" style="margin-top: 150px!important;">
    <div class="col-md-6">
        <section class="p-0">
            <div class="container-fluid p-0">
                <div class="row no-gutters popup-gallery">
                    <div>
                        <a class="portfolio-box" href="@Model.Product.ImageUrl">
                            <img class="img-fluid rounded" src="@Model.Product.ImageUrl" alt="image_@Model.Product.Title">
                            <div class="portfolio-box-caption">
                                <div class="portfolio-box-caption-content">
                                    <div class="project-category text-faded">
                                        @Model.Product.Category
                                    </div>
                                    <div class="project-name">
                                        @Model.Product.Title
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-4 text-center">
        <h1>@Model.Product.Title</h1>
        <p class="mt-3">@Model.Product.ShortDescription</p>
        <p class="mt-3 text-center">
            <span class="display-4 p-5">@Model.Product.SalePrice.ToString("C")</span>
        </p>
        <form asp-controller="Cart" asp-action="AddToCart" method="get">
            <p class="text-center">
                <span>Qty: </span>
                <span>
                    <input type="hidden" asp-for="Product.ProductId" name="id" />
                    <input type="number" min="1" style="width: 45px;" asp-for="Quantity" name="qty" />
                </span>
            </p>
            <p class="mt-4 text-center">
                <span><a asp-controller="WishList" asp-action="AddToWishList" asp-route-id="@Model.Product.ProductId" class="btn btn-outline-info">Add to wishlist</a></span>
                <span><button type="submit" class="btn btn-primary">Add to cart</button></span>
            </p>
        </form>
    </div>
</div>
<hr />
<div class="row">
    <div class="col mt-5">
        <h4>Product Description</h4>
        <p>@Model.Product.Description</p>
    </div>
</div>


