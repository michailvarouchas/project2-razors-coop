@model IEnumerable<Product>

@{
    ViewBag.Page = "home";
}

<header class="masthead text-center text-white d-flex">
    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h1 class="text-uppercase ">
                    <strong class="bg-light-transaparent p-1 rounded" style="font-size: 0.6em;">Organic Power</strong>
                </h1>
                <hr>
            </div>
            <div class="col-lg-8 mx-auto">
                <h2 class="text-faded mb-5 text-white bg-light-transaparent p-2 rounded d-inline-block display-4">Find everything you need!</h2><br />
                <a class="js-scroll-trigger text-white" href="#about"><i class="fa fa-3x fa-arrow-down"></i></a>
            </div>
        </div>
    </div>
</header>

<section class="bg-dark text-white" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-heading text-white">Fresh oganic fruits, dairy and more...</h2>
                <hr class="light my-4">
                <p class="text-faded mb-4">Healthy living is easier than ever!</p>
                <a class="btn-xl js-scroll-trigger text-white" href="#services"><i class="fa fa-3x fa-arrow-down"></i></a>
            </div>
        </div>
    </div>
</section>

<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">We deliver</h2>
                <hr class="my-4">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto text-center mt-3">
            <a class="btn-xl js-scroll-trigger text-dark" href="#portfolio"><i class="fa fa-3x fa-arrow-down"></i></a>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fa fa-4x fa-diamond text-dark mb-3 sr-icons"></i>
                    <h3 class="mb-3">Organic products</h3>
                    <p class="text-muted mb-0">Our products are updated on a daily basis.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fa fa-4x fa-paper-plane text-dark mb-3 sr-icons"></i>
                    <h3 class="mb-3">Immediate shipment</h3>
                    <p class="text-muted mb-0">Fresh products delivered to your door!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fa fa-4x fa-newspaper-o text-dark mb-3 sr-icons"></i>
                    <h3 class="mb-3">Certified products</h3>
                    <p class="text-muted mb-0">Our cooperation maintains the highest quality standards!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fa fa-4x fa-heart text-dark mb-3 sr-icons"></i>
                    <h3 class="mb-3">A healthy lifestyle</h3>
                    <p class="text-muted mb-0">Update your food quality now.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="p-0" id="portfolio">
    <div class="container-fluid p-0">
        <div class="row no-gutters popup-gallery">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-6">
                    <a class="portfolio-box" href="@item.ImageUrl">
                        <img class="img-fluid" src="@item.ImageUrl" alt="image_@item.Title">
                        <div class="portfolio-box-caption">
                            <div class="portfolio-box-caption-content">
                                <div class="project-category text-faded">
                                    @item.Category
                                </div>
                                <div class="project-name">
                                    @item.Title
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<section class="bg-dark text-white go-to-shop">
    <div class="container text-center">
        <h2 class="bg-light-transaparent mb-4 display-4">View today's available products!</h2>
        <a class="sr-button text-white" href="/user/index"><i class="fa fa-2x fa-arrow-right"></i></a>
    </div>
</section>
